<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tmpl_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context="com.page.acuratek.magic.MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/RelativeLayoutTop"
        android:layout_weight="0.17">
        <TextView
            android:id="@+id/tvNameInHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:layout_gravity="end"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/RelativeLayoutBottom"
        android:layout_weight="0.83">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="0.05"
                android:layout_height="fill_parent">
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.9">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:weightSum="1">
                    <!--android:text="Magic Ion Cleanse"-->
                    <Button
                        android:id="@+id/btnIonCleanse"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="@dimen/ibtn_home_height_weight"
                        android:background="@color/colorTransparent"/>
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="@dimen/ibtn_home_space_height_weight"/>

                    <!--android:text="Magic Fit"-->
                    <Button
                        android:id="@+id/btnFit"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="@dimen/ibtn_home_height_weight"
                        android:background="@color/colorTransparent"/>
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="@dimen/ibtn_home_space_height_weight"/>

                    <!--android:text="Magic Massage"-->
                    <Button
                        android:id="@+id/btnMassage"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="@dimen/ibtn_home_height_weight"
                        android:background="@color/colorTransparent"/>
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="@dimen/ibtn_home_space_height_weight"/>

                    <!--android:text="Magic Income"-->
                    <Button
                        android:id="@+id/btnIncome"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="@dimen/ibtn_home_height_weight"
                        android:background="@color/colorTransparent"/>
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="@dimen/ibtn_home_space_height_weight"/>
                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="0.05"
                android:layout_height="fill_parent">
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
